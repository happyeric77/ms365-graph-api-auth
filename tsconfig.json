    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationMap": true
    // "forceConsistentCasingInFileNames": true
